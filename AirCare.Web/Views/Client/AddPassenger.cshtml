@model AirCare.Web.ViewModels.PassengerViewModel

@{
    ViewBag.Title = "AddPassenger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="panel panel-default">
    <div class="panel-heading">Add Passenger</div>
    <div class="panel-body">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = (!ViewBag.IsModelValid) ? "alert alert-danger" : "" })

            <fieldset class="form-horizontal">
                <div class="form-group">



                    @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-lg-2 col-lg-2" })

                    <div class="col-lg-3">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "Enter First Name" })
                        @Html.ValidationMessageFor(model => model.FirstName, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-lg-2 col-lg-2">
                        @Html.LabelFor(model => model.LastName)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Enter Last Name" })
                        @Html.ValidationMessageFor(model => model.LastName, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-lg-2 col-lg-2">
                        @Html.LabelFor(model => model.PassportNumber)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(model => model.PassportNumber, new { @class = "form-control", @placeholder = "Enter Passport Number" })
                        @Html.ValidationMessageFor(model => model.PassportNumber, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-lg-2 col-lg-2">
                        @Html.LabelFor(model => model.EmailAddress)
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", @placeholder = "Enter Email Address" })
                        @Html.ValidationMessageFor(model => model.EmailAddress, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <p>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-primary" value="Create" />
                        </div>
                    </div>
                </p>
            </fieldset>
        }
    </div>
</div>
